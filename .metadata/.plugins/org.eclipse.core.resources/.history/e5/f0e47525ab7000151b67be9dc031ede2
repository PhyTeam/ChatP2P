					read.addConsummer(instance);
					Thread client = new Thread(scClient);
					Thread listener = new Thread(read);
					
					client.start();
					listener.start();
					String[] param = new String[2];
					param[0] = tb_username.getText();
					param[1] = tb_password.getText();
					
